#!/usr/bin/env bash

CHOICES=(
	'lenny | ( Í¡Â° ÍœÊ– Í¡Â°)'
	'shrug | Â¯\_(ãƒ„)_/Â¯'
	'moon | ğŸŒš'
	'B | ğŸ…±ï¸'
	'communism | â˜­'
	'sigma | Î£'
)

CHOICE="$(printf '%s\n' "${CHOICES[@]}" | rofi -dmenu -format i)"

if [ ! -z "$CHOICE" ]; then
	echo -n "${CHOICES[$CHOICE]}" |
		cut -d'|' -f2- |
		cut -c2- |
		xclip -rmlastnl -sel clip
fi
