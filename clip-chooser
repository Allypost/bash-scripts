#!/usr/bin/env bash

CHOICE=$(echo -e "lenny\nshrug\nmoonface\nb\ncommunism\nsigma" | dmenu)

function _choose() {
    case $CHOICE in
        lenny)
            echo -n "( ͡° ͜ʖ ͡°)"
            ;;
        shrug)
            echo -n "¯\\_(ツ)_/¯"
            ;;
        moonface)
            echo -n "🌚"
            ;;
        b)
            echo -n "🅱️"
            ;;
	communism)
	    echo -n "☭"
	    ;;
	sigma)
	    echo -n "Σ"
	    ;;
    esac
}

CHOICE=$(_choose)

if [ ! -z "$CHOICE" ]; then
    echo -n "$CHOICE" | xclip -sel clip
fi

